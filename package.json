{
  "name": "aiew",
  "version": "1.3.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n web,api,ai -c cyan,green,magenta \"pnpm --filter ./apps/web-client run dev\" \"pnpm --filter ./apps/core-api run dev\" \"poetry --directory apps/ai-server run uvicorn app.main:app --reload --port 8000\"",
    "start": "concurrently -n web,api,ai -c cyan,green,magenta \"pnpm --filter ./apps/web-client run start --port 4000\" \"pnpm --filter ./apps/core-api run dev\" \"poetry --directory apps/ai-server run uvicorn app.main:app --reload --port 8000\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:ai": "poetry --directory apps/ai-server run ruff format .",
    "lint": "pnpm lint:node && pnpm lint:ai",
    "lint:node": "eslint \"apps/**/*.{ts,tsx}\" --fix",
    "lint:ai": "poetry --directory apps/ai-server run ruff check . --fix",
    "build": "pnpm --filter \"./apps/**\" build",
    "test": "pnpm -r --stream --if-present run test:with-db",
    "test:ci": "pnpm -r --stream --if-present run test:ci",
    "prepare": "husky",
    "release": "bash scripts/release.sh"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/ai-server/**/*.py": [
      "poetry --directory apps/ai-server run ruff format",
      "poetry --directory apps/ai-server run ruff check . --fix"
    ],
    "**/*.{js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.2",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.11",
      "@types/react": "19.2.4",
      "@types/react-dom": "19.2.3",
      "hono@<4.9.7": ">=4.9.7",
      "hono@>=1.1.0 <4.10.2": ">=4.10.2",
      "valibot@>=0.31.0 <1.2.0": ">=1.2.0",
      "hono@<4.10.3": ">=4.10.3",
      "express@>=5.0.0 <5.2.0": ">=5.2.0",
      "@modelcontextprotocol/sdk@<1.24.0": ">=1.24.0",
      "jws@=4.0.0": ">=4.0.1"
    },
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "esbuild",
      "prisma",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  }
}
